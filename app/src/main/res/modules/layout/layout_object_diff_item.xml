<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/black_40_transparent"
        app:layout_constraintBottom_toBottomOf="@id/leftView2"
        app:layout_constraintLeft_toLeftOf="@id/leftView1"
        app:layout_constraintRight_toRightOf="@id/leftView1"
        app:layout_constraintTop_toTopOf="@id/leftView1" />

    <TextView
        android:id="@+id/pathLabel1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="24dp"
        android:background="?attr/selectableItemBackground"
        android:text="head"
        android:textColor="#224b8f"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/leftView1"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/shape_diff_item_left"
        app:layout_constraintRight_toLeftOf="@id/pathLabel1"
        app:layout_constraintTop_toTopOf="@id/pathLabel1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/moreView1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="4dp"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@id/pathLabel1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/pathLabel1"
        app:srcCompat="@drawable/svg_arrow_right" />

    <TextView
        android:id="@+id/pathLabel2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="8dp"
        android:background="?attr/selectableItemBackground"
        android:text="head"
        android:textColor="#aa2116"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pathLabel1" />

    <View
        android:id="@+id/leftView2"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape_diff_item_left"
        app:layout_constraintBottom_toBottomOf="@id/pathLabel2"
        app:layout_constraintRight_toLeftOf="@id/pathLabel2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/moreView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="4dp"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@id/pathLabel2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/pathLabel2"
        app:srcCompat="@drawable/svg_arrow_right" />

</androidx.constraintlayout.widget.ConstraintLayout>